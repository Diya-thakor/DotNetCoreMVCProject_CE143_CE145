@model OnlineDiscussionForum.Models.QuestionHistory

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>QuestionHistory</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Question
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.text)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info" asp-area="" asp-controller="Answer" asp-action="Index" asp-route-id="@Model.Id">See all answers</a>
    <a class="btn btn-warning" asp-area="" asp-controller="Answer" asp-action="Create" asp-route-id="@Model.Id">Create answers</a>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
