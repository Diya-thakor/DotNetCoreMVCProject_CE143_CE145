@model OnlineDiscussionForum.Models.Answer

@{
    ViewData["Title"] = "Create";
    string questionId = Context.Request.Query["id"].ToString();
}

<h1>Create</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="text" class="control-label"></label>
                <input asp-for="text" class="form-control" />
                <span asp-validation-for="text" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="noOfLike" value="0" />


            <input type="hidden" asp-for="status" value="not accepted" />
                
            <input type="hidden" asp-for="QuestionId" value="@questionId" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@questionId">Back to List</a>
</div>

